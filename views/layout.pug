doctype html
html
  head
      block head
        title="GameVault"
        link(rel='stylesheet' href='/stylesheets/main.css')
  body
    nav
      div(id='logo')
        a(href='/')
          img(src='../media/logo.png' id='logo-img')
      div(id='login-signup')
        if locals.authenticated
          span Welcome 
            a(href=`/users/${user.id}`) #{user.username}!
          form(action='/users/logout' method='post')
            button(type='submit') Logout
        else
          span
            a(href='/users/demo-user') Demo User 
            a(href='/users/login') Login 
            a(href='/users/sign-up') Sign Up
    block content
    footer created by
