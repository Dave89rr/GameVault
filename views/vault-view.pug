extends layout.pug
include utils.pug 

block content
    link(rel="stylesheet" href="/stylesheets/main.css")
    link(rel="stylesheet" href="/stylesheets/vault.css")
    div(id='user-info')
        img
        h1=user.username
        h2 Bio: #{user.bio}
    div(id='entries')
        div(id='collections')
            h3 Collections
            each collection in collections
                h4= collection.name
                p= collection.description
                div(id='games')
                    each game in collection.Games
                      +gameCard(game)

    input(type='button' value='Add a New Collection')

    footer
