extends layout.pug
include utils.pug


block content
    link(rel="stylesheet" href="/stylesheets/main.css")
    div
        h1= collection.name
        h2= collection.description
    div(class='img-box')
        if collection.Games
            each game in collection.Games
              +gameCard(game)
    div(id='addGamesSelect')
      select(name='game_id')
        option(value='1') Game1
        option(value='1') Game2
        option(value='1') Game3
        //- each game in allGames
          option(value=game.game_id)= game.name
